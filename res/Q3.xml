<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="43dp">
    <LinearLayout android:layout_gravity="center_vertical" android:id="@+id/treeview_item" android:background="?attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/treeview_state" android:layout_width="20dp" android:layout_height="16dp" android:src="@drawable/ic_arrow"/>
        <CheckBox android:layout_gravity="center" android:id="@+id/treeview_checkbox" android:focusable="false" android:clickable="false" android:layout_width="25dp" android:layout_height="20dp"/>
        <ImageView android:layout_gravity="center" android:id="@+id/treeview_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="2dp" android:src="@drawable/ic_package" android:layout_centerVertical="true"/>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="17sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/treeview_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="标题" android:maxLines="1"/>
                <TextView android:textSize="13sp" android:ellipsize="end" android:id="@+id/treeview_desc" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="二级标题" android:maxLines="1" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
