<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:background="?attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/title_configSettiing" android:layout_marginStart="16dp"/>
        </LinearLayout>
        <LinearLayout android:background="?attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_margin="10dp" android:src="@drawable/ic_service_green" app:tint="#999999"/>
            <TextView android:textSize="14sp" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/title_system_server"/>
            <LinearLayout android:gravity="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="16dp">
                <Button android:textColor="@color/white" android:id="@+id/system_clear" android:background="@drawable/button" android:layout_width="120dp" android:layout_height="30dp" android:layout_marginTop="5dp" android:text="清理"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:background="?attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_margin="10dp" android:src="@drawable/ic_service_green" app:tint="#999999"/>
            <TextView android:textSize="14sp" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/title_XShare"/>
            <LinearLayout android:gravity="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="16dp">
                <Button android:textColor="@color/white" android:id="@+id/xshare_clear" android:background="@drawable/button" android:layout_width="120dp" android:layout_height="30dp" android:layout_marginTop="5dp" android:text="清理"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:background="?attr/selectableItemBackground" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_margin="10dp" android:src="@drawable/ic_service_green" app:tint="#999999"/>
            <TextView android:textSize="14sp" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/title_appData"/>
            <LinearLayout android:gravity="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="16dp">
                <Button android:textColor="@color/white" android:id="@+id/app_clear" android:background="@drawable/button" android:layout_width="120dp" android:layout_height="30dp" android:layout_marginTop="5dp" android:text="清理"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
